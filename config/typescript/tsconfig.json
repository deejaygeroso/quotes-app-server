{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../../src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "../../dist",
    "rootDir": "../../src",
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["../../src/**/*.ts"],
  "exclude": ["../../node_modules"]
}
