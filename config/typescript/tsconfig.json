{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "<rootDir>/src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "../../dist",
    "rootDir": "../../src",
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["<rootDir>/src/**/*.ts"],
  "exclude": ["<rootDir>/node_modules"]
}
